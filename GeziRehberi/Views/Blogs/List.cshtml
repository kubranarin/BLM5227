@model IEnumerable<GeziRehberi.Models.Blogs>

@{
    ViewBag.Title = "Bloglar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Bloglar Listesi</h4>
                    <p class="card-description">
                        <a href="@Url.Action("Create","Blogs")" class="btn btn-primary btn-sm">
                            <i class="mdi mdi-plus"></i> Yeni Blog Ekle
                        </a>
                    </p>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Başlık</th>
                                    <th>Yer</th>
                                    <th>Kullanıcı</th>
                                    <th>Durum</th>
                                    <th>Görüntülenme</th>
                                    <th>Oluşturulma Tarihi</th>
                                    <th>Aktif / Pasif</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@(item.Title != null && item.Title.Length > 50 ? item.Title.Substring(0, 50) + "..." : item.Title ?? "-")</td>
                                        <td>
                                            @{
                                                string placeName = "-";
                                                if (ViewBag.Places != null && item.PlaceId.HasValue)
                                                {
                                                    var places = ViewBag.Places as IEnumerable<dynamic>;
                                                    var place = places?.FirstOrDefault(p => (int)p.Id == item.PlaceId.Value);
                                                    placeName = place?.Name ?? "-";
                                                }
                                            }
                                            @placeName
                                        </td>
                                        <td>
                                            @{
                                                string userName = "-";
                                                if (ViewBag.Users != null && item.UserId.HasValue)
                                                {
                                                    var users = ViewBag.Users as IEnumerable<dynamic>;
                                                    var user = users?.FirstOrDefault(u => (int)u.Id == item.UserId.Value);
                                                    userName = user?.Name ?? user?.UserName ?? "-";
                                                }
                                            }
                                            @userName
                                        </td>
                                        <td>
                                            @if (item.Status == 1)
                                            {
                                                <span class="badge badge-success">Yayında</span>
                                            }
                                            else if (item.Status == 2)
                                            {
                                                <span class="badge badge-warning">Taslak</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-secondary">Beklemede</span>
                                            }
                                        </td>
                                        <td>@(item.ViewCount ?? 0)</td>
                                        <td>@(item.CreatedDate?.ToString("dd.MM.yyyy") ?? "-")</td>
                                        <td>
                                            @if (item.IsActive == 1)
                                            {
                                                <span class="badge badge-success">Aktif</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">Pasif</span>
                                            }
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-warning">
                                                <i class="mdi mdi-pencil"></i> Düzenle
                                            </a>
                                            @using (Html.BeginForm("Delete", "Blogs", new { id = item.Id }, FormMethod.Post, new { @class = "d-inline", onsubmit = "return confirm('Bu blogu silmek istediğinize emin misiniz?');" }))
                                            {
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-danger">
                                                    <i class="mdi mdi-delete"></i> Sil
                                                </button>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
